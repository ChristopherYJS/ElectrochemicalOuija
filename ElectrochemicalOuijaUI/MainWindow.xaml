<Window x:Class="ElectrochemicalOuija.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <!-- StatusBar at the bottom -->
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem x:Name="StatusBar">
                <TextBlock Text="Ready" />
            </StatusBarItem>
        </StatusBar>

        <!-- Main content -->
        <Grid x:Name="GridMain">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="5" />
                <!-- Vertical splitter -->
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Left side (top-left and bottom-left) -->
            <Grid x:Name="GridLeft" Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="5" />
                    <!-- Horizontal splitter -->
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <!-- Top-left -->
                <Border x:Name="Border2" Grid.Row="0" BorderBrush="Gray" BorderThickness="1" Margin="3">
                    <TextBlock Text="Yop Left" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
                <!-- Horizontal splitter -->
                <GridSplitter x:Name="SplitterHLeft" Grid.Row="1" Height="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                              Background="DarkGray" ShowsPreview="True"/>
                <!-- Bottom-left -->
                <Border x:Name="Border3" Grid.Row="2" BorderBrush="Gray" BorderThickness="1" Margin="3">
                    <TextBlock Text="Bottom Left" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
            </Grid>

            <!-- Vertical splitter between left and right -->
            <GridSplitter x:Name="SplitterV" Grid.Column="1" Width="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                          Background="Black" ShowsPreview="True"/>

            <!-- Right side (top-right and bottom-right) -->
            <Grid x:Name="GridRight" Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="5" />
                    <!-- Horizontal splitter -->
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <!-- Top-right -->
                <Border x:Name="Border1" Grid.Row="0" BorderBrush="Gray" BorderThickness="1" Margin="3,3,4,3">
                    <TextBlock Text="Top Right" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
                <!-- Horizontal splitter -->
                <GridSplitter x:Name="SplitterHRight" Grid.Row="1" Height="2" HorizontalAlignment="Stretch"
                              Background="DarkGray"  ShowsPreview="True" DragDelta="GridSplitter_DragDelta" Margin="0,1,0,2"/>
                <!-- Bottom-right -->
                <Border x:Name="Border4" Grid.Row="2" BorderBrush="Gray" BorderThickness="1" Margin="3,3,4,3">
                    <TextBlock Text="Bottom Right" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
            </Grid>
        </Grid>
    </DockPanel>
</Window>
